<section class="hero-section">
    <div class="hero-items owl-carousel">
        <div class="single-hero-items set-bg" data-setbg="img/zlatanCover.jpg">
        </div>
        <div class="single-hero-items set-bg" data-setbg="img/jerseyPuma.jpg">
        </div>
    </div>
</section>

<div class="banner-section spad">
    <div class="container-fluid">
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-lg-4">
                    <div class="single-banner">
                        <img src="~/img/@category.Name.Replace("Kit",String.Empty).TrimEnd()Jersey.jpg" alt="">
                        <div class="inner-text">
                            <a href="#"><h4>@category.Name.Replace("Kit", String.Empty).ToUpper() MATCH JERSEY</h4></a>
                        </div>
                    </div>
                </div>}
        </div>
    </div>
</div>

<section class="hero-section">
    <div class="hero-items owl-carousel">
        <a asp-area="" asp-controller="Products" asp-action="All" asp-route-pageNumber="1" asp-route-InDiscount="true" >
            <div class="single-hero-items set-bg" data-setbg="https://www.prodirectsoccer.com/-/media/prodirect/project/en/soccer/billboards/standard/pd-campaign/bb-sale-d-180621.jpg?impolicy=thumb&imwidth=1440">
            </div>
        </a>
    </div>
</section>


