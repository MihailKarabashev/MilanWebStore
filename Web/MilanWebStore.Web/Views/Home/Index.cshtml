<section class="latest-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Latest News</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var news in Model.LatestNews)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-latest-blog">
                        <a asp-controller="News" asp-action="ById" asp-route-id="@news.Id"><img src="@news.ImageUrl" alt=""></a>
                        <div class="latest-text">
                            <div class="tag-list">
                                <div class="tag-item">
                                    <i class="fa fa-calendar-o"></i>
                                    @news.CreatedOn.ToString("MMMM dd, yyyy")
                                </div>
                            </div>
                            <a asp-controller="News" asp-action="ById" asp-route-id="@news.Id">
                                <h4>@news.ShortTitle</h4>
                            </a>
                            <p>@news.ShortDescription </p>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="benefit-items">
