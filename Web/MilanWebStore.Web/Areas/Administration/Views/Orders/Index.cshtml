@model IndexOrdersViewModel
@{
    this.ViewData["Title"] = "Orders";
    var countUnProcessed = 1;
    var countProcessed = 1;
}


<main class="dash-content">
    <div class="container-fluid">
        <h1 class="dash-title">Orders</h1>
        <div class="row">
            <div class="col-lg-12">
                <div class="card spur-card">
                    <div class="card-header">
                        <div class="spur-card-icon">
                            <i class="fas fa-table"></i>
                        </div>
                        <div class="spur-card-title">UnProcessed Orders</div>
                    </div>
                    <div class="card-body ">
                        <table class="table table-hover table-in-card">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">City</th>
                                    <th scope="col">Street</th>
                                    <th scope="col">Zip Code</th>
                                    <th scope="col">Payment</th>
                                    <th scope="col">Shipping</th>
                                    <th scope="col">Created On</th>
                                    <th scope="col">Process</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.UnProcessedOrders)
                                {
                                    <tr>
                                        <th scope="row">@(countUnProcessed++)</th>
                                        <td>@order.ApplicationUserUserName</td>
                                        <td>@order.AddressCity</td>
                                        <td>@order.AddressStreet</td>
                                        <td>@order.AddressZipCode</td>
                                        <td>@order.PaymentMethod</td>
                                        <td>@order.ShippingMethod</td>
                                        <td>@order.CreatedOn.ToString("MM/dd/yyyy")</td>
                                        <td>
                                            <a asp-area="Administration" asp-controller="Orders"
                                               asp-action="Process" asp-route-id="@order.Id"
                                               class="btn btn-success">
                                                <i class="fas fa-check"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card spur-card">
                    <div class="card-header">
                        <div class="spur-card-icon">
                            <i class="fas fa-table"></i>
                        </div>
                        <div class="spur-card-title">Processed Orders</div>
                    </div>
                    <div class="card-body ">
                        <table class="table table-hover table-in-card">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">City</th>
                                    <th scope="col">Street</th>
                                    <th scope="col">Zip Code</th>
                                    <th scope="col">Payment</th>
                                    <th scope="col">Shipping</th>
                                    <th scope="col">Created On</th>
                                    <th scope="col">Deliver</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.ProcessedOrders)
                                {
                                    <tr>
                                        <th scope="row">@(countProcessed++)</th>
                                        <td>@order.ApplicationUserUserName</td>
                                        <td>@order.AddressCity</td>
                                        <td>@order.AddressStreet</td>
                                        <td>@order.AddressZipCode</td>
                                        <td>@order.PaymentMethod</td>
                                        <td>@order.ShippingMethod</td>
                                        <td>@order.CreatedOn.ToString("MM/dd/yyyy")</td>
                                        <td>
                                            <a asp-area="Administration" asp-controller="Orders"
                                               asp-action="Deliver" asp-route-id="@order.Id"
                                               class="btn btn-warning">
                                                <i class="fas fa-check"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>