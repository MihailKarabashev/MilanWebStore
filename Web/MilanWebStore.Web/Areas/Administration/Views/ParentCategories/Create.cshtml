@model ParentCategoryInputModel
@{
    this.ViewData["Title"] = "Create Gender Category";
}

@if (this.TempData.ContainsKey("Error"))
{
<div class="alert alert-info alert-dismissible fade show" role="alert">
    <strong>@this.TempData["Error"]</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}

<div class="card spur-card">
    <div class="card-header">
        <div class="spur-card-icon">
            <i class="fas fa-chart-bar"></i>
        </div>
        <div class="spur-card-title"> Create New Gender Category </div>
    </div>
    <div class="card-body ">
        <form asp-area="Administration" asp-controller="ParentCategories" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChildCategoryId"></label>
                <select class="form-control" asp-for="ChildCategoryId" asp-items="@Model.ChildCategories.Select(x=>new SelectListItem(x.Name, x.Id.ToString()))">
                </select>
                <span asp-validation-for="ChildCategoryId" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-danger">Create</button>
        </form>
    </div>
</div>