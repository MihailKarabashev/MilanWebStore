@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                    <span>Login</span>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Login</h2>
                    <partial name="_ExternalLoginPartial" />
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="group-input">
                            <label asp-for="Input.Username">Username *</label>
                            <input asp-for="Input.Username" class="form-control" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="group-input">
                            <label asp-for="Input.Password">Password *</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="group-input gi-check">
                            <div class="gi-more">
                                <label asp-for="Input.RememberMe">
                                    Save Password
                                    <input type="checkbox" asp-for="Input.RememberMe">
                                    <span class="checkmark"></span>
                                </label>
                                <a class="forget-pass" asp-page="./ForgotPassword">Forget your Password</a>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-danger site-btn login-btn">Sign In</button>
                    </form>
                    <div class="switch-login">
                        <a asp-page="./Register" class="or-login">Or Create An Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
